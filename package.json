{
  "name": "@stainedhead/lc-platform-dev-accelerators",
  "version": "0.1.0",
  "description": "Cloud-agnostic service wrappers for modern application development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:contract": "bun test tests/contract",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "bench": "bun run benchmarks/index.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cloud",
    "aws",
    "azure",
    "gcp",
    "multi-cloud",
    "abstraction",
    "hexagonal-architecture",
    "provider-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stainedhead/lc-platform-dev-accelerators.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/@stainedhead"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@aws-sdk/client-apprunner": "^3.0.0",
    "@aws-sdk/client-appconfig": "^3.0.0",
    "@aws-sdk/client-batch": "^3.0.0",
    "@aws-sdk/client-docdb": "^3.0.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-rds": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/client-sns": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "lru-cache": "^10.0.0",
    "openid-client": "^5.6.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
